<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Advanced Notion Automation</title>
    <link href="/assets/Notion-logo.svg" rel="icon">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>

    <svg xmlns="http://www.w3.org/2000/svg" class="d-none">
      <symbol id="check-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
      </symbol>
      <symbol id="info-fill" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
      </symbol>
      <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </symbol>
    </svg>

    <%- include('partials/header') %>


    <div class="container">

      <div class="row align-items-start mt-4">
        <div class="col">
          <label for="db1-id" class="form-label">Database ID </label>
          <input type="text" class="form-control" id="db1-id">

          <button type="button" class="btn btn-outline-primary mt-2 d-block" id="test">Retrieve DB1</button>

          <div class="alert alert-danger d-flex align-items-center alert-dismissible mt-2 d-none" role="alert" id="db1-retrieve-error">
            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" width="25" height="25"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <div id="db1-retrieve-error-msg">
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

          <label for="db1-filter" class="form-label mt-2">Filter</label>
          <select class="form-select" aria-label="Default select example" id="db1-filter"></select>
          contains
          <select class="form-select" aria-label="Default select example" id="db1-filter-value"></select>

          <button type="button" class="btn btn-outline-primary mt-2 d-block" id="query-db1-button">Query DB1</button>

          <div class="alert alert-danger d-flex align-items-center alert-dismissible mt-2 d-none" role="alert" id="db1-query-error">
            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" width="25" height="25"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <div id="db1-query-error-msg">
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

        </div>

        <div class="col text-center">
          <img src="/assets/arrows-bidirectional-svgrepo-com.svg" alt="bidirectional arrows" width="80">
        </div>
        <div class="col">
          <label for="db2-id" class="form-label">Database ID </label>
          <input type="text" class="form-control" id="db2-id">
        </div>
      </div>

      

      <textarea class="form-control mt-5" id="db-test" rows="20"></textarea>

    </div>


    <script src="/js/bootstrap.min.js"></script>

    <script src="client.js"></script>

  </body>
</html>